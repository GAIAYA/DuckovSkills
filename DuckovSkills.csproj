<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Nullable>enable</Nullable>
		<DuckovPath>E:\SteamLibrary\steamapps\common\Escape from Duckov</DuckovPath>

		<SubPath>\Duckov_Data\Managed\</SubPath>
	</PropertyGroup>
	<ItemGroup>
		<!-- 包含所有 DLL -->
		<AllDlls Include="$(DuckovPath)$(SubPath)*.dll" />

		<!-- 定义要排除的系统 DLL -->
		<SystemDlls Include="$(DuckovPath)$(SubPath)mscorlib.dll;&#xA;                      $(DuckovPath)$(SubPath)System.dll;&#xA;                      $(DuckovPath)$(SubPath)System.*.dll;&#xA;                       $(DuckovPath)$(SubPath)Microsoft.*.dll;&#xA;                       $(DuckovPath)$(SubPath)netstandard.dll;&#xA;                       $(DuckovPath)$(SubPath)WindowsBase.dll" />
		
		<!-- 引用非系统 DLL -->
		<Reference Include="@(AllDlls)" Exclude="@(SystemDlls)" />
	</ItemGroup>
	
